html
  head
    title= title
    link(rel="stylesheet", href="/css/highlight.default.min.css")
    link(rel="stylesheet", href="/css/base.css")
    script(src="/js/vendor/highlight.min.js")
    script(src="/js/vendor/socket.io-1.3.5.js")
  body
    hgroup#topbar
      h1#title
        a(href="/") Dumbledore
      h2#tagline alpha
    div#root
